import java.util.Arrays;

public class AnagramChecker {

    public static boolean areAnagrams(String str1, String str2) {
        // Handle null or empty strings
        if (str1 == null || str2 == null) {
            return false; // Anagrams cannot be formed from null strings
        }
        if (str1.isEmpty() && str2.isEmpty()) {
            return true; // Both empty, considered anagrams
        }

        // Remove spaces and convert to lowercase for case-insensitive comparison
        str1 = str1.replaceAll("\\s", "").toLowerCase();
        str2 = str2.replaceAll("\\s", "").toLowerCase();

        // If lengths are different, they cannot be anagrams
        if (str1.length() != str2.length()) {
            return false;
        }

        // Use a frequency array (assuming ASCII characters)
        int[] charCounts = new int[256]; // For all ASCII characters

        // Increment count for characters in str1
        for (char c : str1.toCharArray()) {
            charCounts[c]++;
        }

        // Decrement count for characters in str2
        for (char c : str2.toCharArray()) {
            charCounts[c]--;
        }

        // Check if all counts are zero
        for (int count : charCounts) {
            if (count != 0) {
                return false; // Mismatch in character counts
            }
        }

        return true; // All counts are zero, strings are anagrams
    }

    public static void main(String[] args) {
        String s1 = "Listen";
        String s2 = "Silent";
        String s3 = "Hello";
        String s4 = "World";
        String s5 = "A Gentleman";
        String s6 = "Elegant Man";

        System.out.println("'" + s1 + "' and '" + s2 + "' are anagrams: " + areAnagrams(s1, s2)); // true
        System.out.println("'" + s3 + "' and '" + s4 + "' are anagrams: " + areAnagrams(s3, s4)); // false
        System.out.println("'" + s5 + "' and '" + s6 + "' are anagrams: " + areAnagrams(s5, s6)); // true
    }
}
